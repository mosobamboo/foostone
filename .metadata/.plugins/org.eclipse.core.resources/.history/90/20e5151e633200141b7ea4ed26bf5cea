package foo;

public class Monster {

	public Monster(String name,int hp){
		this.name = name;
		this.hp = hp;
	}
	
	public String name ;
	
	public int hp;

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}
	
	public void notify(int loss){
		if(this.hp<=0){
			System.out.println("The monster id dead.");
			return;
		}
	}
}
